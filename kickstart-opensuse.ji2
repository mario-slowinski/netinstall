      <username>root</username>
    </user>
  </users>

  <software>
    <image/>
    <install_recommended config:type="boolean">false</install_recommended>
    <instsource/>
    <packages config:type="list">
      <package>perl</package>
      <package>python</package>
      <package>open-vm-tools</package>
    </packages>
  </software>

</profile>
